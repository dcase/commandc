<h1>Editing project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <% if @project.imagefile %>
    <%= image_tag(@project.imagefile.public_filename(:project_thumb)) %>
  <% end %>

    <% fields_for :imagefile do |a| %>
      <p>
        <%= a.label 'Thumbnail' %><br />
        <%= a.file_field :uploaded_data %>
      </p>

    <% end %>
  <p>
    <%= f.label :categories %><br />
    <!--<%= f.collection_select(:categories, Category.find_all_by_parent_id(1), :id, :name) %>-->
	<%= select_tag "categories[]", option_groups_from_collection_for_select(Category.find(1,2), :children, :name, :id, :name, @project.categories.collect {|p| p.id}), :multiple => true %>
  </p>
  <p>
    <%= f.label :is_recent %><br />
    <%= f.check_box :is_recent %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>
